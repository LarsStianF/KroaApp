<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    
    android:backgroundTint="@color/cardBackground"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/evt_id"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/evt_name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="Kroa i Bø"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/evt_date"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="20.09.2019"
            android:layout_below="@+id/evt_name"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/evt_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evt_date"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evt_start"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"
                android:text="23:00 -"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_end"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"
                android:text=" 01:00"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <TextView
            android:id="@+id/evt_text"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evt_start_end"
            android:gravity="center"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:text="Hei vi kjører fort, veldig fort"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/men_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/evt_text"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center">
            <ImageView
                android:id="@+id/man_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man_black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </ImageView>

            <ImageView
                android:id="@+id/man_red"
                android:layout="@+id/man_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man_red"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </ImageView>

            <ImageView
                android:id="@+id/man_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man_blue"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </ImageView>

            <ImageView
                android:id="@+id/man_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man_red"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/men_panel"
            android:gravity="center">

            <TextView
                android:id="@+id/evt_sec_got"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="2"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_sec_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:text="12"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_bar_got"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="3"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_bar_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:text="10"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_crw_got"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="11"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_crw_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="11"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_tch_got"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="6"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/evt_tch_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:text="12"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>