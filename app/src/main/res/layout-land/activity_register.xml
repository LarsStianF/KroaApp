<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/kroalogofit" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fname_field_text"
        android:textColor="@color/textColorPrimary"

        />

        <EditText
            android:id="@+id/fname_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/rounded_corner"
            android:ems="11"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:imeOptions="flagNoExtractUi"
            android:text="" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/lname_field_text"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/lname_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/colorPrimary"
        android:ems="11"
        android:inputType="textPersonName"
        android:imeOptions="flagNoExtractUi"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/email_field_text"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary" />
    <EditText
        android:id="@+id/email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/colorPrimary"
        android:ems="11"
        android:inputType="textEmailAddress"
        android:imeOptions="flagNoExtractUi"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/password_field_text"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/colorPrimary"
        android:imeOptions="flagNoExtractUi"
        android:ems="11"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/phone_field_string"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary" />

    <EditText
        android:id="@+id/phone_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/colorPrimary"
        android:imeOptions="flagNoExtractUi"
        android:ems="11"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="confirmInput"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner"
        android:text="@string/register_btn_text"
        />


</LinearLayout>
</ScrollView>